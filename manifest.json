{
  "name" : "Spy Watch",
  "version" : "0.94",
  "description" : "Allowing users to view third party internet tracking",
  "background" : {
    "scripts": ["background.js"]
  },
  "browser_action" :
  {
    "default_icon" : "spy.png",
    "default_popup" : "popup.html"
  },
  "content_scripts" : [
    {
      "matches" : [
        "http://*/*",
        "https://*/*"
      ],
      "js" : ["useful.js", "contentscript.js"],
      "run_at" : "document_end",
      "all_frames" : true
    }
  ],
  "permissions": [
     "activeTab",
     "storage",
     "tabs",
     "cookies",
       "http://*/*", "https://*/*" ],


  "manifest_version": 2



}